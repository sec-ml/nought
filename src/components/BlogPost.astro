---
const { title, url, tags, post, image, tag, author, created } = Astro.props;
import { CONFIG } from "../config/config.js";

import PostExcerpt from '@igor.dvlpr/astro-post-excerpt'
if (image) {
    if (image.includes('http')) {
        var IMGPATH:string = image;
    } else {
        var IMGPATH:string = '/images/' + image;
    }
    var POST_IMAGE = '<a href="'+ url +'"><img src="' + IMGPATH + '" alt="' + title + '" class="boxed-image w-full h-96 object-cover object-center mb-0"></a>';
} else {
    var POST_IMAGE = '';
}

if (tag) {
    var SELECTED_TAG = tag;
}

if (CONFIG.POST_LISTING_SHOW_AUTHOR || CONFIG.POST_LISTING_SHOW_DATE) {
    var POSTED_BY_ON = '<p class="byline mb-2">Posted';
    if (CONFIG.POST_LISTING_SHOW_AUTHOR == true) {POSTED_BY_ON += ' by ' + author;}
    if (CONFIG.POST_LISTING_SHOW_DATE == true) {POSTED_BY_ON += ' on ' + created.toString().slice(0,10);}
    POSTED_BY_ON += '</p>';
} else {
    var POSTED_BY_ON = '';
}
---
<article class="boxed border-2 mb-6 border-grey-900">
    <Fragment set:html={POST_IMAGE} /><div class="p-4">
    
<a class="" href={url}><h1 class="text-3xl mb-3">{title}</h1></a>
<Fragment set:html={POSTED_BY_ON} />
<p class="post-excerpt">
    <PostExcerpt
      post={post}
      words={40}
      addEllipsis={true} />
  </p>
<div class="mt-4">
{
    tags.map((tag:string) => {
        var separator = tags.indexOf(tag) < tags.length - 1 ? ' <span class="text-neutral-400">|</span> ' : '';
        var selected_tag_styling = SELECTED_TAG == tag ? 'font-bold italic text-neutral-600 p-0 tag m-0' : 'italic text-neutral-600 p-0 tag m-0';
        return (
            <span class={selected_tag_styling}><a href={`/tags/${tag.replace(/\s+/g, '-')}`}>#{tag}</a></span><Fragment set:html={separator} />
        );
    })
}
</div>
</div>
</article>