---
import { configLoader } from "../utils/configLoader";
const CONFIG = await configLoader();

const logo_text = CONFIG.LOGO_TEXT ?? CONFIG.TITLE;

interface Props {
  sidebar: Boolean;
}

const { sidebar } = Astro.props;

let logo_classes: string;
if (sidebar) {
  logo_classes =
    "shadow-sidebar-shadow text-sidebar-light border-sidebar-light";
} else {
  logo_classes = "";
}
---

<a
  href="/"
  class={`${logo_classes} boxed shadow-[4px_4px_0px_0px] px-2 py-1 border-2 rounded-sm text-2xl font-bold`}
  >{logo_text}</a
>
