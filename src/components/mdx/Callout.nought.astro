---
// Fairly stock DaisyUI from https://daisyui.com/components/alert/
// Called by Info, Warning, Error, Success and Alert components.

interface Props {
  alert_type?: string;
}

const { alert_type = null } = Astro.props;

let alert_class:string;
let svg_data:string;
switch (alert_type) {
  case 'info':
    alert_class = ' alert-info';
    svg_data = 'M13 16h-1v-4h-1m1-4h.01M21 12a9 9 0 11-18 0 9 9 0 0118 0z';
    break;
  case 'warning':
    alert_class = ' alert-warning';
    svg_data = 'M12 9v2m0 4h.01m-6.938 4h13.856c1.54 0 2.502-1.667 1.732-3L13.732 4c-.77-1.333-2.694-1.333-3.464 0L3.34 16c-.77 1.333.192 3 1.732 3z';
    break;
  case 'error':
    alert_class = ' alert-error';
    svg_data = 'M10 14l2-2m0 0l2-2m-2 2l-2-2m2 2l2 2m7-2a9 9 0 11-18 0 9 9 0 0118 0z';
    break;
  case 'success':
    alert_class = ' alert-success';
    svg_data = 'M9 12l2 2 4-4m6 2a9 9 0 11-18 0 9 9 0 0118 0z'
    break;
  default:
    alert_class = ' bg-base-300 border-base-content';
    svg_data = 'M13 16h-1v-4h-1m1-4h.01M21 12a9 9 0 11-18 0 9 9 0 0118 0z';
}
---
<div role="alert" class={`rounded-field my-3 alert${alert_class}`}>
  <svg xmlns="http://www.w3.org/2000/svg" class="h-6 w-6 shrink-0 stroke-current" fill="none" viewBox="0 0 24 24">
    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d={svg_data} />
  </svg>
  <span><slot /></span>
</div>