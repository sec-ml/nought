---
import { CONFIG } from "../config/config.js";
const { meta_type, meta_title, meta_description, meta_image, meta_url, meta_sitename } = Astro.props;

var META_TYPE:string = meta_type ? meta_type : "website";

if (meta_image) {
    var OG_IMAGE:string = '<meta property="og:image" content="'+meta_image+'" />';
    var TWIT_IMAGE:string = '<meta name="twitter:card" content="summary_large_image" /> \
    <meta name="twitter:image" content="'+meta_image+'" />';
} else {
    var OG_IMAGE:string = "";
    var TWIT_IMAGE:string = '<meta name="twitter:card" content="summary" /> ';
}

if (CONFIG.SUPPORT_TWITTER_META) {
    var TWIT_META_BLOCK:string = '<!-- Twitter Meta Tags --> \
<meta name="twitter:title" content="'+meta_title+'" /> \
<meta name="twitter:description" content="'+meta_description+'" /> \
'+TWIT_IMAGE
} else {
    var TWIT_META_BLOCK:string = "";
}
---
<!-- Metadata -->
<meta charset="utf-8" />
<link rel="canonical" href={meta_url} />
<link rel="sitemap" href="/sitemap-index.xml" />
<meta name="generator" content={Astro.generator} />
<meta name="title" content={meta_title}>
<meta name="description" content={meta_description}>
<title>{meta_title}</title>
<!-- Open Graph -->
<meta property="og:type" content={META_TYPE} />
<meta property="og:title" content={meta_title} /> 
<meta property="og:description" content={meta_description} /> 
<Fragment set:html={OG_IMAGE} />
<meta property="og:url" content={meta_url} /> 
<meta property="og:site_name" content={meta_sitename} />
<Fragment set:html={TWIT_META_BLOCK} />